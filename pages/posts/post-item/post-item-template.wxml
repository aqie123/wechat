<template name="postItem">
  <view class="post-container">
    <view class="post-author-date">
      <image wx:if="{{img_condition}}" class="post-author" src="{{img.avatar}}"></image>
      <text class="post-date">{{"aqie: "+date}} {{idx}}</text>
    </view>
    <text class="post-title">{{title}}{{color}}</text>
    <image class="post-image" src="{{img.imgSrc}}"></image>
    <text class="post-content"> {{content}}
    </text>
    <view class="post-like">
      <image class="post-like-image" src="/images/icon/view.png"></image>
      <text class="post-like-font">{{reading}}</text>
      <image class="post-like-image" src="/images/icon/chat.png"></image>
      <text class="post-like-font">{{collection}}</text>
    </view>
  </view>
</template>